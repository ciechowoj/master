#pragma once

#include <glm/glm.hpp>
#include <glm/gtc/constants.hpp>
#include <glm/gtc/matrix_transform.hpp>
#include <glm/gtx/transform.hpp>

namespace haste {

using namespace glm;

}

template <class Stream> Stream& operator<<(Stream& stream, const glm::vec3& v) {
    return stream << "[" << v.x << ", " << v.y << ", " << v.z << "]";
}
